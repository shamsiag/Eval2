{"ast":null,"code":"import OrderRow from \"@/components/OrderRow.vue\";\nimport { formatCurrency, formatDate } from \"@/utils/format\";\nimport { getStatusText } from \"@/utils/orderStatus\";\nexport default {\n  name: \"OrderTable\",\n  components: {\n    OrderRow\n  },\n  props: {\n    orders: Array\n  },\n  methods: {\n    formatCurrency,\n    formatDate,\n    getStatusText\n  }\n};","map":{"version":3,"names":["OrderRow","formatCurrency","formatDate","getStatusText","name","components","props","orders","Array","methods"],"sources":["/Users/macbookpro/Sham/S6/Eval2-1/frontend/src/components/OrderTable.vue"],"sourcesContent":["<template>\n        <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n\n    <div class=\"order-table\">\n      <table v-if=\"orders.length\" class=\"table-desktop\">\n        <thead>\n          <tr>\n            <th>Référence</th>\n            <th>Date</th>\n            <th>Total TTC</th>\n            <th>Statut</th>\n            <th>Payée</th>\n            <th>Facture</th>\n          </tr>\n        </thead>\n        <tbody>\n          <OrderRow\n            v-for=\"order in orders\"\n            :key=\"order.id\"\n            :order=\"order\"\n            @show-invoice=\"$emit('show-invoice', $event)\"\n          />\n        </tbody>\n      </table>\n  \n      <!-- Affichage mobile -->\n      <div v-if=\"orders.length\" class=\"table-mobile\">\n        <div v-for=\"order in orders\" :key=\"order.id\" class=\"order-card\">\n          <p><strong>Réf :</strong> {{ order.ref || order.id }}</p>\n          <p><strong>Date :</strong> {{ formatDate(order.date_creation) }}</p>\n          <p><strong>Total :</strong> {{ formatCurrency(order.total_ttc) }}</p>\n          <p><strong>Statut :</strong> {{ getStatusText(order) }}</p>\n          <p><strong>Payée :</strong> {{ order.isPaid ? 'Oui' : 'Non' }}</p>\n          <p>\n            <button v-if=\"order.invoice\" @click=\"$emit('show-invoice', order.invoice.id)\">Facture</button>\n            <span v-else>Aucune</span>\n          </p>\n        </div>\n      </div>\n    </div>\n  </template>\n  \n  <script>\n  import OrderRow from \"@/components/OrderRow.vue\";\n  import { formatCurrency, formatDate } from \"@/utils/format\";\n  import { getStatusText } from \"@/utils/orderStatus\";\n  \n  export default {\n    name: \"OrderTable\",\n    components: { OrderRow },\n    props: { orders: Array },\n    methods: { formatCurrency, formatDate, getStatusText },\n  };\n  </script>\n  \n  <style scoped>\n  .table-desktop {\n    display: table;\n  }\n  .table-mobile {\n    display: none;\n  }\n  .order-card {\n    background: white;\n    color: #1e1e1e;\n    border-radius: 8px;\n    padding: 15px;\n    margin-bottom: 15px;\n    box-shadow: 0 0 8px rgba(0,0,0,0.1);\n  }\n  \n  /* Responsive */\n  @media screen and (max-width: 768px) {\n    .table-desktop {\n      display: none;\n    }\n    .table-mobile {\n      display: block;\n    }\n  }\n  </style>\n  "],"mappings":"AA2CE,OAAOA,QAAO,MAAO,2BAA2B;AAChD,SAASC,cAAc,EAAEC,UAAS,QAAS,gBAAgB;AAC3D,SAASC,aAAY,QAAS,qBAAqB;AAEnD,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,UAAU,EAAE;IAAEL;EAAS,CAAC;EACxBM,KAAK,EAAE;IAAEC,MAAM,EAAEC;EAAM,CAAC;EACxBC,OAAO,EAAE;IAAER,cAAc;IAAEC,UAAU;IAAEC;EAAc;AACvD,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}